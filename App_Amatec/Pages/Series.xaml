<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Amatec.Pages.Series"
             Title="Series"
             Style="{ StaticResource pages_style }">

    <Grid Style="{ StaticResource grids_style }">

        <Label Text="Movies" Style="{ StaticResource titles_style }"
               Grid.Column="0" Grid.Row="0"/>

        <ScrollView Grid.Column="0" Grid.Row="1">

            <Grid Style="{ StaticResource lists_style }">

                <ImageButton x:Name="imgbtn_bridgerton" Style="{ StaticResource items_style }"
                            Clicked="imgbtn_bridgerton_Clicked"
                            Grid.Column="0" Grid.Row="0"/>

                <ImageButton x:Name="imgbtn_bebe_rena" Style="{ StaticResource items_style }"
                             Clicked="imgbtn_bebe_rena_Clicked"
                             Grid.Column="1" Grid.Row="0"/>

                <ImageButton x:Name="imgbtn_fallout" Style="{ StaticResource items_style }"
                             Clicked="imgbtn_fallout_Clicked"
                             Grid.Column="0" Grid.Row="1"/>

            </Grid>

        </ScrollView>

    </Grid>

</ContentPage>